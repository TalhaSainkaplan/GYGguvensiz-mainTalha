@model SecureEmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Yeni Çalışan Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" style="max-width: 500px;">

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" placeholder="Çalışanın tam adı" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" placeholder="Departman" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" placeholder="Pozisyon" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
